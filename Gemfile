#If you have OpenSSL installed, we recommend updating
# the following line to use "https"
source 'http://rubygems.org'
source 'https://rails-assets.org'

gem "middleman", "~> 3.3.12"
gem "middleman-blog", "~> 3.5.3"
gem 'middleman-deploy', '~> 1.0'

# For feed.xml.builder
gem "builder", "~> 3.0"

# Live-reloading plugin
gem "middleman-livereload", "~> 3.1.0"

# For faster file watcher updates on Windows:
gem "wdm", "~> 0.1.0", :platforms => [:mswin, :mingw]

# Windows does not come with time zone data
gem "tzinfo-data", platforms: [:mswin, :mingw]

# rails-assets
gem "rails-assets-jquery", "~> 1.11.1", :require => false
gem "rails-assets-underscore", "~> 1.6.0", :require => false
gem "rails-assets-json2-js", "~> 1.0.0", :require => false
gem "rails-assets-backbone", "~> 1.1.2", :require => false
gem "rails-assets-backbone.marionette", "~> 2.1.0", :require => false
gem 'bootstrap-sass', '~> 3.2.0', :require => false
